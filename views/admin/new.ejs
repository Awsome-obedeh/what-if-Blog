<%- include('header.ejs') %>
    <!-- Main Content-->
    <main class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <p>Register new admin</p>
                    <div class="my-5">
                    <div class="card">
                        <div class="card-body">
                            <form id="contactForm" method="POST" action="/what-if/admin/new">
                                <% if (errorMsg != '') { %>
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        <%= errorMsg %>
                                         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                       </div>
                                <% } %>
                                 
                                <div class="form-floating">
                                    <input required class="form-control" id="name" type="text" placeholder="Enter your name..." name="username" data-sb-validations="required" />
                                    <label for="username">Username</label>
                                    <div class="invalid-feedback" data-sb-feedback="title:required">Username</div>
                                </div>
    
                                <div class="form-floating">
                                    <input required class="form-control"  type="password" name="password"/>
                                    <label for="password">Password</label>
                                    <div class="invalid-feedback" data-sb-feedback="description:required">Password is required.</div>
                                   
                                </div>
                                 <br />
                               
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase d-inline" id="submitButton" type="submit">Submit</button>
                              <a href="/what-if/admin/" class="d-block mt-2 text-decoration-underline fst-italic"> Already have an account Login</a> 
                                
                              
                            </form>
                        </div>  
                    </div>
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include('../footer.ejs') %>